in vec2 Tex_Coords;

out vec4 out_color;

uniform sampler2DRect TexSampler;

void main()
{
    out_color = vec4(texture(TexSampler, Tex_Coords).r, 0.0, 0.0, texture(TexSampler, Tex_Coords).a);
}
